# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=limesurvey
MYSQL_USER=limesurvey
MYSQL_PASSWORD=your_secure_password_here

# LimeSurvey Admin Configuration
LIMESURVEY_ADMIN_USER=admin
LIMESURVEY_ADMIN_NAME=Administrator
LIMESURVEY_ADMIN_EMAIL=admin@example.com
LIMESURVEY_ADMIN_PASSWORD=your_admin_password_here
PUBLIC_URL=https://your-domain.com

# Google Drive Configuration
# Get this from Google Cloud Console (see README.md)
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here

# Cloudflare Tunnel Configuration
# Get this from Cloudflare Zero Trust Dashboard (see README.md)
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Netdata Cloud Configuration (Optional)
# Leave empty to use Netdata locally without cloud features
# Get token from https://app.netdata.cloud if you want cloud access
NETDATA_CLAIM_TOKEN=
NETDATA_CLAIM_ROOMS=

# Watchtower - Automated Updates Configuration (Optional)
# Leave empty to disable notifications
# Supported: slack://, discord://, gotify://, email://, etc.
# See: https://containrrr.dev/watchtower/notifications/
WATCHTOWER_NOTIFICATIONS=
WATCHTOWER_NOTIFICATION_URL=

# Backup Schedule (Optional)
# How often to run backups (cron format)
# See BACKUP_PERFORMANCE.md for detailed analysis and recommendations
# Default: Hourly (maximum data protection)
# Options:
#   Hourly:        0 * * * *         (max 1h data loss, 24 backups/day) ‚Üê DEFAULT
#   Every 2 hours: 0 */2 * * *       (max 2h data loss, 12 backups/day)
#   Every 3 hours: 0 */3 * * *       (max 3h data loss, 8 backups/day)
#   Every 6 hours: 0 */6 * * *       (max 6h data loss, 4 backups/day)
#   Daily 3 AM:    0 3 * * *         (max 24h data loss, not recommended with RESTORE_ON_BOOT)
BACKUP_SCHEDULE=0 * * * *

# Backup Retention Policy (Optional)
# Controls how many backups are kept in Google Drive
# Default values shown - uncomment and modify to customize

# Keep all hourly backups for last N hours (default: 24)
BACKUP_KEEP_HOURLY_HOURS=24

# Keep one backup per day for last N days (default: 7)
BACKUP_KEEP_DAILY_DAYS=7

# Keep one backup per week for last N weeks (default: 4)
BACKUP_KEEP_WEEKLY_WEEKS=4

# Keep one backup per month for last N months (default: 12)
BACKUP_KEEP_MONTHLY_MONTHS=12

# Keep one backup per year forever (default: true)
BACKUP_KEEP_YEARLY=true

# Backup Encryption (HIGHLY RECOMMENDED for password security!)
# Generate a strong password and store in 1Password
# Generate with: openssl rand -base64 32
# Leave empty to disable encryption (backups will be plain text)
BACKUP_ENCRYPTION_KEY=

# Restore on Boot (Recommended - validates backups work!)
# When enabled, Pi will delete all volumes and restore from latest Google Drive backup on every boot
# This makes your Pi stateless - Google Drive is the source of truth
# BENEFITS: Proves backups work, fresh start every boot, validates disaster recovery
# TRADEOFF: Any data changes since last hourly backup will be lost on reboot
# Options: true = always restore on boot, false = only restore on first install (default)
RESTORE_ON_BOOT=false
