[Unit]
Description=LimeSurvey Health Monitor Watchdog
After=limesurvey.service
Requires=limesurvey.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/home/pi/limesurvey-pi-stack
ExecStart=/home/pi/limesurvey-pi-stack/scripts/watchdog/health-monitor.sh
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
